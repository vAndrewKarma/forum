{
  "name": "forum-app",
  "version": "1.0.0",
  "description": "A simple Forum app which can be used as a template. The app is based on a MVC pattern (model-view-controller).",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon -L --watch . --polling",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "prettier": "prettier --check **/*.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "build": "tsc -p tsconfig.json",
    "lint:fix": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "ready": "npm run format && npm run lint && npm run build"
  },
  "engines": {
    "node": ">=18.0"
  },
  "keywords": [
    "node",
    "node.js",
    "boilerplate",
    "express",
    "jest"
  ],
  "author": {
    "name": "vAndrewKarma",
    "email": "karma.andrew16@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.19",
    "@types/express-serve-static-core": "^4.17.21",
    "@types/express-session": "1.15.16",
    "@types/node": "^20.10.0",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^6.18.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.2",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "http": "0.0.1-security",
    "mongoose": "^8.0.4",
    "nodemailer": "^6.9.9",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "redis": "^4.6.11",
    "ts-jest": "^29.1.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
